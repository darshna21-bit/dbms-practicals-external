SHOW DATABASES;
CREATE DATABASE employee;
USE employee;

CREATE TABLE emp_details (
emp_no INT PRIMARY KEY,
emp_name VARCHAR(30) NOT NULL,
emp_gender CHAR(1) CHECK (emp_gender IN ('M','F')),
emp_sal INT CHECK (emp_sal > 0),
emp_dept VARCHAR(20) DEFAULT 'Not Assigned'
);

SHOW TABLES;

ALTER TABLE emp_details ADD emp_city VARCHAR(20);

DESC emp_details;

INSERT INTO emp_details VALUES
(1, 'Ram', 'M', 300000, 'Designing', 'Pune'),
(2, 'Soham', 'M', 300000, 'Designing', 'Mumbai'),
(3, 'Mohan', 'M', 250000, 'Management', 'Delhi'),
(4, 'Om', 'M', 400000, 'Coding', 'Bangalore');

SELECT * FROM emp_details;

CREATE TABLE emp_info AS
SELECT emp_no, emp_name, emp_gender FROM emp_details;

SELECT * FROM emp_info;

TRUNCATE TABLE emp_info;

SELECT * FROM emp_info;

DROP TABLE emp_info;

CREATE VIEW emp_view1 AS
SELECT * FROM emp_details;

CREATE VIEW emp_view2 AS
SELECT * FROM emp_details WHERE emp_dept = 'Designing';

SELECT * FROM emp_view1;
SELECT * FROM emp_view2;

UPDATE emp_details
SET emp_dept = 'Coding'
WHERE emp_name = 'Mohan';

SELECT * FROM emp_details;

DROP VIEW emp_view1;
DROP VIEW emp_view2;

CREATE INDEX emp_ind ON emp_details(emp_no, emp_name);

SHOW INDEX FROM emp_details;
